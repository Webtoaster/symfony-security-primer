{% extends 'login.html.twig' %}
{% block title %}Log in!{% endblock %}
{% block stylesheets %}
	{{ encore_entry_link_tags('app_security') }}
{% endblock %}
{% block javascripts %}
	{{ encore_entry_script_tags('app_security') }}
{% endblock %}
{% block body %}
	<form action="{{ path('app_login') }}" method="post" class="form-signin">
		<h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
		{{ include('chunks/_form_login.html.twig') }}
		{{ include('chunks/_footer_main.html.twig') }}
		<p class="mt-1 mb-1 text-muted text-nowrap">
			<a href="{{ url('app_home') }}">Return to Home Page</a>
		</p>
	</form>
{% endblock %}

